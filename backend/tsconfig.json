{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "jsx": "react",
    "outDir": "./dist/",
    "rootDirs": ["./src"],
    "lib": ["es6", "dom", "esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
